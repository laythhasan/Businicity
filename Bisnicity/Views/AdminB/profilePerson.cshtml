@model IEnumerable<BisnicityApp.Entites.Person>
@using Infrastrucer.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> sigin;
@{
    ViewData["Title"] = "PErson";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkedInLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cvpdf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Educationlevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Univircity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src=~/ProfilImage/@item.PersonImage
                     style="width:64px"
                     asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkedInLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cvpdf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Educationlevel.levelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Univircity.UniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            @if (sigin.IsSignedIn(User) && User.IsInRole(BisnicityKey.Admin))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PersonID"></a>
                    <a asp-action="Details" asp-route-id="@item.PersonID"></a>
                    <a asp-action="Delete" asp-route-id="@item.PersonID"></a>
                </td>
            }
            </tr>
        }
    </tbody>
</table>
